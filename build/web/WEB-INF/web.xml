<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>AuthenticationController</servlet-name>
        <servlet-class>controller.auth.AuthenticationController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeauthenticationController</servlet-name>
        <servlet-class>controller.auth.DeauthenticationController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>homepageController</servlet-name>
        <servlet-class>controller.entity.HomepageController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegisterController</servlet-name>
        <servlet-class>controller.register.RegisterController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>infor</servlet-name>
        <servlet-class>controller.infor.infor</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>informationController</servlet-name>
        <servlet-class>controller.entity.InformationController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>updateInforController</servlet-name>
        <servlet-class>controller.entity.UpdateInforController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>uploadImageController</servlet-name>
        <servlet-class>controller.entity.UploadImageController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Postcontroller</servlet-name>
        <servlet-class>controller.entity.Postcontroller</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CommentController</servlet-name>
        <servlet-class>controller.entity.CommentController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SearchTopicController</servlet-name>
        <servlet-class>controller.entity.SearchTopicController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>TopicController</servlet-name>
        <servlet-class>controller.entity.TopicController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Like</servlet-name>
        <servlet-class>controller.entity.LikeController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AuthenticationController</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeauthenticationController</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>homepageController</servlet-name>
        <url-pattern>/homepage</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegisterController</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>infor</servlet-name>
        <url-pattern>/infor</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>informationController</servlet-name>
        <url-pattern>/info</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>updateInforController</servlet-name>
        <url-pattern>/update</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>uploadImageController</servlet-name>
        <url-pattern>/uploadImg</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Postcontroller</servlet-name>
        <url-pattern>/post</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CommentController</servlet-name>
        <url-pattern>/comment</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SearchTopicController</servlet-name>
        <url-pattern>/searchTopic</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>TopicController</servlet-name>
        <url-pattern>/topic</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Like</servlet-name>
        <url-pattern>/like</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
